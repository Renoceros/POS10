<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cartItemCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/itembg">

        <TextView
            android:id="@+id/textIdCartItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="10030"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textNameCartItem"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="Thingamajig 20100"
            app:layout_constraintStart_toEndOf="@+id/textIdCartItem"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textQuantityCartItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="21"
            app:layout_constraintStart_toEndOf="@+id/textNameCartItem"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textPriceCartItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="3888888"
            app:layout_constraintStart_toEndOf="@+id/textQuantityCartItem"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textSubtotCartItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="99988888888"
            app:layout_constraintStart_toEndOf="@+id/textPriceCartItem"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
